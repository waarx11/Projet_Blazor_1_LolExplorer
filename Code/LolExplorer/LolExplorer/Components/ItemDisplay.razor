@page "/itemdisplay"

@if(@ItemApi!=null){
    <a href="viewItem/@(ItemApi.Id)" style="all=unset;">
        <div class="item btn btn-primary" style="margin:5px; background-color: #2c3e50;border-color:#e3cd96;">
            @if (@ItemApi.Icon != null)
            {
                @if (@ItemApi.Icon.Contains("ddragon"))
                {
                    <img src="@ItemApi.Icon" class="king img-thumbnail" title="@ItemApi.Name" alt="@ItemApi.Name" style="max-width: 150px;" />
                }
                else
                {
                    @if (!string.IsNullOrWhiteSpace(@ItemApi.Icon))
                    {
                        <img src="data:image/png;base64, @(ItemApi.Icon)" class="king img-thumbnail" title="@ItemApi.Name" alt="@ItemApi.Name" style="width: 73.8px; height: 73.8px;" />
                    }
                    else
                    {
                        <img src="images/default.png" class="kingimg-thumbnail" title="@ItemApi.Name" alt="@ItemApi.Name" style="max-width: 150px;" />
                    }
                }
            }
            <p>@ItemApi.Name</p>
        </div>
    </a>
}
else{
    <p>Item Does Not Exist</p>
}