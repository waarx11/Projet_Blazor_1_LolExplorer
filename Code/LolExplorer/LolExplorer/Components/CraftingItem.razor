<div class="item"
     ondragover="event.preventDefault();"
     draggable="true"
     @ondragstart="@OnDragStart"
     @ondrop="@OnDrop"
     @ondragenter="@OnDragEnter"
     @ondragend="OnDragEnd"
     @ondragleave="@OnDragLeave">
    
    @if (Item != null)
    {
        <ItemDisplay ItemApi="@Item"></ItemDisplay>
    }
</div>